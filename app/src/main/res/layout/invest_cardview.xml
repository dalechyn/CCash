<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4sp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/cardViewBackColor"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_dialog_info" />

            <TextView
                android:id="@+id/InvestName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:text="Name of the invest:"
                android:textColor="@color/defaultTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/InvestNameVIew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:text="InvestName"
                android:textColor="@color/defaultTextColor"
                android:textSize="18dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/InvestDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textColor="@color/defaultTextColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/InvestDescView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="InvestDescription"
                android:textColor="@color/defaultTextColor"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/InvestDebtprs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debtor's:"
                android:textColor="@color/defaultTextColor"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/InvestDebtorsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="DebtorsList"
                android:textColor="@color/defaultTextColor"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MyDebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="My debt:"
                android:textColor="@color/defaultTextColor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/MyDebtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="My debt"
                android:textColor="@color/defaultTextColor"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TotalSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="Summary:"
                android:textColor="@color/defaultTextColor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TotalSumView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="Bigmoney"
                android:textColor="@color/defaultTextColor"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnShreQR"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@color/buttonShareQR"
                android:text="Share QR"
                android:textColor="@color/defaultTextColor" />
            <Button
                android:id="@+id/btnCheckMore"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/buttonCheckMore"
                android:layout_weight="1"
                android:text="Check more"
                android:textColor="@color/defaultTextColor" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>